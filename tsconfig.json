{
  "compileOnSave": true,
  "compilerOptions": {
    "pretty": true,
    "sourceMap": true,
    "sourceRoot" : "/",
    "inlineSources": true,
    "noImplicitAny": false,
    "declaration": false,
    "noEmitOnError": false,
    "noEmitHelpers": true,
    "removeComments": true,
    "rootDir": "./",
    "target": "es5",
    "experimentalDecorators": true,
    "out": "dist/diorama.js"
  },
  "files": [
    "src/tile.ts",
    "src/layout.ts",
    "src/diorama.ts"
  ],
  "exclude": [
    ".",
    "feather-lnk",
    "typings",
    "node_modules",
    "jspm_packages",
    "test/**/*.spec.ts"
  ]
}
